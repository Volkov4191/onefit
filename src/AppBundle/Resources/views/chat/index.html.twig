{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 text-xs-center">
            <h1>Список чатов</h1>
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-xs-2"></div>
        <div class="col-xs-8 text-xs-right">
            <div class="btn-group" role="group" >
                <a href="{{ path('chat_new') }}" class="btn btn-primary">Создать новый чат</a>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
    <div class="clear"></div>
    <div class="row ">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-xs-1">#</th>
                        <th class="col-xs-8">Название</th>
                        <th class="col-xs-3">Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for chat in chats %}
                    <tr>
                        <td class="col-xs-1"><a href="{{ path('chat_show', { 'id': chat.id }) }}">{{ chat.id }}</a></td>
                        <td class="col-xs-8">{{ chat.name }}</td>
                        <td class="col-xs-3">
                            <div class="btn-group" role="group" >
                                <a href="{{ path('chat_messages', { 'id': chat.id }) }}" class="btn btn-primary">Посмотреть</a>
                                <a href="{{ path('chat_edit', { 'id': chat.id }) }}" class="btn btn-primary">Редактировать</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-xs-2"></div>
    </div>
{% endblock %}
