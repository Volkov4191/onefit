{% if form.vars.data.id %}
    {% set label  =  'Сохранить' %}
    {% set header = 'Редактирование чата' %}
{% else %}
    {% set label  =  'Добавить' %}
    {% set header = 'Создание чата' %}
{% endif %}

<div class="row ">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <h1>{{ header }}</h1>

        {{ form_start(form) }}
            <div class="form-group">
                <label for="formGroupExampleInput">Название</label>
                {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form) }}
                <input type="submit" value="{{ label }}" class="btn btn-primary"/>
            </div>
        {{ form_end(form) }}
    </div>
    <div class="col-xs-2"></div>
</div>